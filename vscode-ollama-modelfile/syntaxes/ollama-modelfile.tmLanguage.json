      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.ollama"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.ollama"
        }
      },
      "name": "string.quoted.double.ollama"
    },
    {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.ollama"
    },
    {
      "match": "\\b(true|false|yes|no|on|off)\\b",
      "name": "constant.language.boolean.ollama"
    },
    {
      "match": "^\\s*([A-Z_]+):",
