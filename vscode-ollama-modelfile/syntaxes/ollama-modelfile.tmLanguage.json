{
  "name": "Ollama Modelfile",
  "scopeName": "source.ollama-modelfile",
  "patterns": [
    {
      "match": "^\\s*#.*$",
      "name": "comment.line.number-sign.ollama"
    },
    {
      "match": "^\\s*(FROM|LICENSE|TEMPLATE|SYSTEM|PARAMETER|ADAPTER|MODEL|MOUNT|MESSAGE)\\b",
      "name": "keyword.control.directive.ollama"
    },
    {
      "begin": "\"\"\"",
      "beginCaptures": {
